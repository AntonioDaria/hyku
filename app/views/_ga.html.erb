<%# Override https://github.com/samvera/hyrax/blob/master/app/views/_ga.html.erb %>
<%# to be able to customize the GA id per tenant %>
<%# JavaScript tracking snippet from https://developers.google.com/analytics/devguides/collection/analyticsjs/ %>
<% tracking_id = Settings.google_analytics_id.send(tenant_name) %>
<!-- Google Analytics -->
<script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

    ga('create', '<%= tracking_id %>', 'auto');
    ga('send', 'pageview');
    ga('send', {
        hitType: 'event',
        eventCategory: 'fileset',
        eventAction: 'Downloads',
        eventLabel: '<%= current_work_title %>'
    });
</script>
<!-- End Google Analytics -->
