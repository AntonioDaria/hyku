

<% array_of_hash.each_with_index do |hash, index| %>

<div class="ubiquity-meta-creator" >

   <label class="control-label multi_value optional" for="generic_work_creator_name_type">
    creator name type<span style="color:blue;">required<span></label>
    
    <%= select_tag "generic_work[creator_group][][creator_name_type]", content_tag(:option,'select one...',:value=>"")+options_from_collection_for_select( NameTypeService.new.select_active_options.flatten.uniq!, :to_s, :to_s, hash.dig("creator_name_type")),
     required: true, :class => 'ubiquity_creator_name_type'
      %>
  <br/>
      <label class="ubiquity_creator_given_name control-label multi_value optional" for="generic_work_creator_given_name">
        creator given name <span style="color:blue;">required<span> </label>

      <%= text_field_tag "generic_work[creator_group][][creator_given_name]", hash.dig("creator_given_name"),
                         class: "ubiquity_creator_given_name generic_work_creator_group form-control multi-text-field multi_value",
                         name: "generic_work[creator_group][][creator_given_name]",
                         required: true
      %>

      <br>
      <label class="ubiquity_creator_family_name control-label multi_value optional" for="generic_work_creator_family">
        creator family name</label>


      <%= text_field_tag "generic_work[creator_group][][creator_family_name]", hash.dig("creator_family_name"),
                         class: "ubiquity_creator_family_name generic_work_creator_group form-control multi-text-field multi_value",
                         name: "generic_work[creator_group][][creator_family_name]", required: true

      %>

      <br>

      <label class="ubiquity_creator_orcid control-label multi_value optional" for="generic_work_creator_orcid">
        creator orcid</label>

      <%= text_field_tag "generic_work[creator_group][][creator_orcid]", hash.dig("creator_orcid"),
                         class: "ubiquity_creator_orcid generic_work_creator_group form-control multi-text-field multi_value",
                         name: "generic_work[creator_group][][creator_orcid]"
      %>

      <br>
      <label class="ubiquity_creator_isni control-label multi_value optional" for="generic_work_creator_isni">
        creator isni</label>

      <%= text_field_tag "generic_work[creator_group][][creator_isni]", hash.dig("creator_isni"),
                         class: "ubiquity_creator_isni generic_work_creator_group form-control multi-text-field multi_value",
                         name: "generic_work[creator_group][][creator_isni]"
      %>
      <br>
      <label class="ubiquity_creator_organization_name control-label multi_value optional" for="generic_work_creator_organization_name">
        creator organization name</label>

      <%= text_field_tag  "generic_work[creator_group][][creator_organization_name]", hash.dig("creator_organization_name"),
                          class: "ubiquity_creator_organization_name generic_work_creator_organization_name form-control multi-text-field multi_value",
                          placeholder: 'Add creator organization name',
                          name: "generic_work[creator_group][][creator_organization_name]"
      %>
      <br/>

      <%= hidden_field_tag "generic_work[creator_group][][creator_position]", index, class: 'ubiquity-creator-score'  %>

      <br>
      <a href="#" style="color:red;"  class=" remove_creator form-group " data-removeUbiquityCreator=".ubiquity-meta-creator">
        <span class="glyphicon glyphicon-remove"></span>
        <span class="controls-remove-text">Remove</span>
      </a>
      |

      <a href="#" class=" add_creator" data-addUbiquityCreator=".ubiquity-meta-creator">Add another </a>

      <br> <br>

</div>

<% end %>
