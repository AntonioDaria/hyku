<% template = f.object.model.class.to_s.underscore %>
<% model_name = f.object.model_class %>
<% set_default = ResourceTypesService.select_default(model_name) %>

<label class="control-label" for="<% template %>_resource_type">Resource Type</label>

<%= select_tag "#{template}[resource_type][]",
      options_from_collection_for_select( ResourceTypesService.select_template_options(model_name),
                                          :last,
                                          :first,
                                          set_default),
      class: 'form-control'
%>
