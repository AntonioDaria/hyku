<div class="ubiquity-meta-contributor" >

  <label class="control-label multi_value optional" for="journal_article_contributor_orcid">
    contributor name type</label>

  <%= select_tag "journal_article[contributor][][contributor_name_type]",
                 options_for_select(NameTypeService.new.select_active_options),
                 prompt: true, required: true %>

  <br>

  <label class="control-label multi_value optional" for="journal_article_contributor_orcid">
    contributor given name</label>

  <%= text_field_tag  "journal_article[contributor][][contributor_given_name]", nil,
                      class: "journal_article_contributor_given_name form-control multi-text-field multi_value",
                      placeholder: 'Add contributor given name',
                      name: "journal_article[contributor][][contributor_given_name]"
  %>

  <br>
  <label class="control-label multi_value optional" for="journal_article_contributor_orcid">
    contributor family name</label>

  <%= text_field_tag  "journal_article[contributor][][contributor_family_name]", nil,
                      class: "journal_article_contributor_family_name form-control multi-text-field multi_value",
                      placeholder: 'Add contributor family name',
                      name: "journal_article[contributor][][contributor_family_name]"
  %>

  <br>
  <label class="control-label multi_value optional" for="journal_article_contributor_orcid">
    contributor orcid</label>

  <%= text_field_tag "journal_article[contributor][][contributor_orcid", nil,
                     class: "journal_article_contributor_group form-control multi-text-field multi_value",
                     placeholder: 'Add contributor orcid',
                     name: "journal_article[contributor][][contributor_orcid]"
  %>

  <br>
  <label class="control-label multi_value optional" for="journal_article_contributor_orcid">
    contributor isni</label>

  <%= text_field_tag "journal_article[contributor][][contributor_isni", nil,
                     class: "journal_article_contributor_group form-control multi-text-field multi_value",
                     placeholder: 'Add contributor isni',
                     name: "journal_article[contributor][][contributor_isni]"
  %>

  <br>
    <%= hidden_field_tag "journal_article[contributor][][contributor_position]", 1, class: 'ubiquity-contributor-score'  %>
   <br>

  <a href="#" style="color:red;"  class=" remove_contributor form-group " data-removeUbiquitycontributor=".ubiquity-meta-contributor">
    <span class="glyphicon glyphicon-remove"></span>
    <span class="controls-remove-text">Remove</span>
  </a>
  |

  <a href="#" class=" add_contributor" data-addUbiquitycontributor=".ubiquity-meta-contributor">Add another </a>

  <br> <br>

</div>
