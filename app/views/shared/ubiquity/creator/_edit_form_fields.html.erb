

<% array_of_hash.each do |hash| %>

<div class="ubiquity-meta-creator" >

   <label class="control-label multi_value optional" for="journal_article_creator_orcid">
    creator name type</label>

    <%= select_tag "journal_article[creator][][creator_name_type]", content_tag(:option,'select one...',:value=>"")+options_from_collection_for_select( NameTypeService.new.select_active_options.flatten.uniq!, :to_s, :to_s, hash["creator_name_type"]), required: true %>

  <br>

      <label class="control-label multi_value optional" for="journal_article_creator_orcid">
        creator given name</label>

      <%= text_field_tag "journal_article[creator][][creator_given_name]", hash["creator_given_name"],
                         class: "journal_article_creator_group form-control multi-text-field multi_value",
                         name: "journal_article[creator][][creator_given_name]"
      %>

      <br>
      <label class="control-label multi_value optional" for="journal_article_creator_orcid">
        creator family name</label>


      <%= text_field_tag "journal_article[creator][][creator_family_name]", hash["creator_family_name"],
                         class: "journal_article_creator_group form-control multi-text-field multi_value",
                         name: "journal_article[creator][][creator_family_name]"
      %>

      <br>

      <label class="control-label multi_value optional" for="journal_article_creator_orcid">
        creator orcid</label>

      <%= text_field_tag "journal_article[creator][][creator_orcid]", hash["creator_orcid"],
                         class: "journal_article_creator_group form-control multi-text-field multi_value",
                         name: "journal_article[creator][][creator_orcid]"
      %>

      <br>
      <label class="control-label multi_value optional" for="journal_article_creator_orcid">
        creator isni</label>

      <%= text_field_tag "journal_article[creator][][creator_isni]", hash["creator_orcid"],
                         class: "journal_article_creator_group form-control multi-text-field multi_value",
                         name: "journal_article[creator][][creator_isni]"
      %>
      <br>
      <%= hidden_field_tag "journal_article[creator][][creator_position]", hash["creator_position"], class: 'ubiquity-creator-score'  %>

      <br>
      <a href="#" style="color:red;"  class=" remove_creator form-group " data-removeUbiquitycreator=".ubiquity-meta-creator">
        <span class="glyphicon glyphicon-remove"></span>
        <span class="controls-remove-text">Remove</span>
      </a>
      |

      <a href="#" class=" add_creator" data-addUbiquitycreator=".ubiquity-meta-creator">Add another </a>

      <br> <br>

</div>

<% end %>
